<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NPSTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="alertDialogTheme">@style/NPSTheme.AlertDialog</item>
    </style>

    <style name="NPSTheme.AlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/colorOnPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NPSTheme.ActionBar" parent="">
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/colorOnPrimary</item>
        <item name="android:actionOverflowButtonStyle">@color/colorOnSecondary</item>
    </style>

    <style name="NPSTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NPSTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NPSTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
